<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Semi_Monthly_PD_Due_Days_check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(loan__Frequency_of_Loan_Payment__c) == &apos;Semi-Monthly-PD&apos;,ABS(DAY(loan__Second_Payment_Date__c)- DAY(loan__Repayment_Start_Date__c)) &lt; 5)</errorConditionFormula>
    <errorMessage>Absolute difference between first payment due day &amp; second payment due day can not be lesser than 5</errorMessage>
</ValidationRule>
