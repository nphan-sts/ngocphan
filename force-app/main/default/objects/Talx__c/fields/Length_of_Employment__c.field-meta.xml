<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Length_of_Employment__c</fullName>
    <description>Converts Length of Employement from months to yrs&amp;mths as text</description>
    <externalId>false</externalId>
    <formula>TEXT(MFLOOR( Value(Length_of_Employement__c) / 12)) &amp; &quot; Yr(s) &quot;&amp; TEXT(mod(Value(Length_of_Employement__c), 12))&amp;&quot; Mths&quot;</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Length of Employment</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
