<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Type_cannot_be_null</fullName>
    <active>true</active>
    <description>Type should always be present</description>
    <errorConditionFormula>OR(ISBLANK(TEXT(loan__Type__c)), ISNULL(TEXT(loan__Type__c)))</errorConditionFormula>
    <errorMessage>Type must not be null.</errorMessage>
</ValidationRule>
