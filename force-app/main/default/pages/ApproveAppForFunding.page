<apex:page standardController="genesis__Applications__c" extensions="ApproveAppForFundingController" recordSetVar="apps" action="{!changeAppStatus}">
   <apex:form >
       <apex:pageBlock title="Approve Applications For Funding">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!updateApps}" value="Confirm"/>
            </apex:pageBlockButtons>
            <apex:pageBlockTable value="{!eligibleApps}" var="app">
                <apex:column value="{!app.name}"/>
                <apex:column value="{!app.genesis__account__r.name}"/>
                <apex:column value="{!app.genesis__Status__c}"/> 
                <apex:column value="{!app.OwnerID}"/> 
            </apex:pageBlockTable> 
        </apex:pageBlock>
    </apex:form>    
</apex:page>