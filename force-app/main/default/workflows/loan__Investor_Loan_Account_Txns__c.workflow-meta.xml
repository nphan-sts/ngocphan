<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>peer__Update_VAT_Amount</fullName>
        <field>peer__VAT_On_Service_Charge__c</field>
