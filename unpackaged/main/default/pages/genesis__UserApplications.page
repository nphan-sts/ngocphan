<apex:page lightningStylesheets="{!$User.UIThemeDisplayed == 'Theme4d'}" controller="genesis.UserApplicationsController">
    <apex:pageBlock title="Applications">
        
        <apex:pageBlockTable var="application" value="{!applications}" >
          <apex:column > 
              <apex:facet name="header">
                  Application ID 
              </apex:facet>
              <apex:outputLink id="transactionRoom" value="/apex/ApplicationTransactionRoom?id={!application.Id}"> 
                  {!application.name} 
              </apex:outputLink>
          </apex:column>
          <apex:column >
              <apex:facet name="header">
                  Account
              </apex:facet>
              <apex:outputLabel >{!application.Account__r.Name}</apex:outputLabel>
          </apex:column>
          <apex:column >
              <apex:facet name="header">
                  Contact
              </apex:facet>
              <apex:outputLabel >{!application.Contact__r.Name}</apex:outputLabel>
          </apex:column>
          <apex:column >
              <apex:facet name="header">
                  Class
              </apex:facet>
              <apex:outputLabel >{!application.CL_Product__r.clcommon__Class__c}</apex:outputLabel>
          </apex:column>
          <apex:column >
              <apex:facet name="header">
                  Collateral Type
              </apex:facet>
              <apex:outputLabel >{!application.Collateral_Type__r.Name}</apex:outputLabel>
          </apex:column>
          <apex:column >
              <apex:facet name="header">
                  Purpose 
              </apex:facet>
              <apex:outputLabel >{!application.CL_Purpose__r.Name}</apex:outputLabel>
          </apex:column>
          <apex:column value="{!application.genesis__Loan_Amount__c}"/>
          <apex:column value="{!application.genesis__Status__c}" />
          <apex:column >
              <apex:facet name="header">
                  My Role
              </apex:facet>
              <apex:outputText >{!application.Routing_Number__c }</apex:outputText>
          </apex:column>
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>