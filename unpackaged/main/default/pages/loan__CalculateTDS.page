<apex:page lightningStylesheets="true" id="calculateTDSPage" standardController="loan__Loan_Account__c"
    extensions="loan.CalculateTDSAmountController"
    tabStyle="loan__Loan_Account__c"
    sidebar="{!IF($CurrentPage.Parameters.modal == 'true', false, true)}"
    title="Calculate TDS Amount">
	<apex:form >
    <apex:pageBlock id="calulateTDS">
        
    <apex:pageBlockSection columns="1" id="RSSection" title="TDS Schedule">
        
        <apex:pageblockTable value="{!tdsList}" id="tdsTable" var="TDS" headerClass="tableRight" styleClass="tableRight">
            <apex:column value="{!TDS.dueDate}" width="20%" headerValue="DueDate" headerClass="tableLeft" styleClass="tableLeft" />
            <apex:column value="{!TDS.interest}" width="20%" headerValue="Due Interest" />
            <apex:column value="{!TDS.principal}" width="20%" headerValue="Due Principal" />
            <apex:column value="{!TDS.balance}" width="20%" headerValue="Balance" />
            <apex:column value="{!TDS.tdsAmount}" width="20%" headerValue="TDS Amount" />
            

        </apex:pageblockTable>
        
     </apex:pageBlockSection> 
     <apex:pageBlockButtons >
      		<apex:commandButton value="Cancel" action="{!cancel}"/>
        </apex:pageBlockButtons>
    </apex:pageBlock>
        </apex:form>
    
</apex:page>