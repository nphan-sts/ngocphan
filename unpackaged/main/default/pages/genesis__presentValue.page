<apex:page lightningStylesheets="{!$User.UIThemeDisplayed == 'Theme4d'}" standardController="genesis__Applications__c" extensions="genesis.PresentValueCtrl" action="{!onLoad}">
<apex:outputPanel > <!--rendered="{!NOT(manager.isSF1Request)}">-->
<apex:composition template="genesis__wizardComposition">
 div.tooltip {
    width: 195px;
    float: left;
  }
  div.tooltip:hover {
    background: #ffffff;
    text-decoration: none;
  } /*BG color is a must for IE6*/
  div.tooltip span {
    display: none;
    padding: 2px 3px;
    margin-left: 8px;
    width: 195px;
  }
  div.tooltip:hover span {
    display: inline;
    position: absolute;
    border: 1px solid #cccccc;
    background: #FFC;;
    color: #000000;
  }
  
<div class="tooltip" style="display:inline">
    <span>Refresh</span>
</div>
        <apex:define name="pageBody" >
            
            <apex:panelGrid columnClasses="col1,col2" columns="2" width="100%"  cellpadding="10" cellspacing="10" border="2" rules="all">               
                <apex:outputPanel layout="block" styleClass="outPanelLeft" >
                    <div class="button bordered back">
                        <span class="pointer"></span>
                        <div class="content">
                            <span class="label">
                                <apex:commandLink action="{!backActionLogic}" value="{!manager.backButtonText}" />
                            </span>
                        </div>
                    </div>
                </apex:outputPanel>
        
                <apex:outputPanel layout="block">                   
                    <div class="button bordered next">
                        <span class="pointer"></span>
                        <div class="content">
                            <span class="label">
                                <apex:commandLink action="{!nextActionLogic}" value="{!manager.nextButtonText}"/>
                            </span>
                        </div>
                    </div>
                    
                </apex:outputPanel>
            
            </apex:panelGrid>
            
            <apex:pageBlock >
                
                <apex:pageMessages />
                <apex:pageBlockButtons >
                    <apex:commandButton action="{!presetValueCalculation}" value="Save" disabled="{!isFinalize}"/>
                    <apex:commandButton action="{!presentValueFinalize}" value="Finalize"/>
                </apex:pageBlockButtons>
            
                <apex:pageBlockSection columns="2"
                        id="leaseDetailSection" title="Contract Details">
                       <apex:outputField label="Financed Amount" value="{!application.genesis__Financed_Amount__c}" /> 
                       <apex:outputField label="Residual Value" value="{!application.genesis__Residual_Amount__c}" /> 
                       <apex:outputField label="Payment Amount" value="{!application.genesis__Payment_Amount__c}"/>
                       <apex:outputField label="Frequency" value="{!application.genesis__Payment_Frequency__c}"/>
                       <apex:outputField label="Term" value="{!application.genesis__Term__c}" /><!-- Add number of Payments-->
                       <!--  <apex:outputField label="Yield" value="{!application.Yield__c}"/>-->
                </apex:pageBlockSection>
                
                        <!--save part-->
                        <apex:outputpanel rendered="{!NOT(isFinalize)}">
                            <apex:pageBlockSection columns="2" id="presentValuePageBlockSection" title="Present Value">
                            <apex:inputField Label="Discount Rate" value="{!application.genesis__Discount_Rate__c}" required="true"/><!-- User should be able to enter-->
                            <apex:outputtext Label="Present Value " value="{!application.genesis__Net_Present_Value__c}"/>
                            </apex:pageBlockSection>
                       </apex:outputpanel>
                       <!--finalized part part-->
                       <apex:outputpanel rendered="{!isFinalize}">
                       <apex:pageBlockSection columns="2" id="presentValuePageBlockSection1" title="Present Value">
                            <apex:outputField Label="Discount Rate" value="{!application.genesis__Discount_Rate__c}"/><!-- User should be able to enter-->
                            <apex:outputtext Label="Present Value " value="{!application.genesis__Net_Present_Value__c}"/>
                            </apex:pageBlockSection>
                       </apex:outputpanel>
                       
                
                
                <apex:outputpanel rendered="{!NOT(isFinalize)}">
                    <apex:pageBlockSection columns="2"
                        id="assignementDetailsScetion" title="Assignment Details">
                        <apex:inputField Label="Assigned To" value="{!application.genesis__Assigned_To__c}" required="true"/>
                </apex:pageBlockSection>
                </apex:outputpanel>
                
                <apex:outputpanel rendered="{!(isFinalize)}">
                    <apex:pageBlockSection columns="2"
                        id="assignementDetailsScetion1" title="Assignment Details">
                        <apex:outputField Label="Assigned To" value="{!application.genesis__Assigned_To__c}" />
                </apex:pageBlockSection>
                </apex:outputpanel>
                
            </apex:pageBlock>
           
        </apex:define>
    </apex:composition>
</apex:outputPanel>
</apex:page>