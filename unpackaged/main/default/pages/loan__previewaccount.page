<apex:page lightningStylesheets="true" controller="loan.NewAccountController" id="previewAccountPage"
	tabStyle="Accounting__tab">
<apex:include pageName="clcommon__mintTheme"/>

	<apex:sectionHeader title="Account Preview" />

	<apex:form >

		<apex:pageBlock title="New Account Details" mode="edit"
			id="createNewAccount">
			<apex:pageMessages />
			<apex:pageBlockButtons location="top">
				<apex:commandButton value="Save" action="{!save}" />
				<apex:commandButton value="Cancel" immediate="true"
					action="{!cancel}" />
			</apex:pageBlockButtons>

			<apex:outputpanel id="refresh">
				<apex:pageBlockSection columns="2">
					<apex:outputField value="{!account.Name}" />
					<apex:outputField value="{!account.loan__Account_Type__c}" />
					<apex:outputField value="{!account.loan__Description__c}" />
					<apex:outputField value="{!account.loan__Parent_Account__c}" />
					<apex:outputField value="{!account.loan__Long_Description__c}" />
					<apex:outputField value="{!account.loan__isLeaf__c}" />
				</apex:pageBlockSection>

			</apex:outputpanel>

			<apex:pageBlockButtons location="bottom">
				<apex:commandButton value="Save" action="{!save}" />
				<apex:commandButton value="Cancel" immediate="true"
					action="{!cancel}" />
			</apex:pageBlockButtons>
		</apex:pageBlock>

	</apex:form>


</apex:page>