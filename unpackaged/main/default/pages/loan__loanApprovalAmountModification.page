<apex:page lightningStylesheets="true" standardController="loan__Loan_Account__c"
    extensions="loan.LoanApprovalAmountModificationCtrl"
    sidebar="{!IF($CurrentPage.Parameters.modal == 'true', false, true)}">
<apex:include pageName="clcommon__mintTheme"/>

    <apex:stylesheet value="{!IF($CurrentPage.Parameters.modal == 'true', $Resource.loan__modalheaderStyle,'')}" />
    <apex:stylesheet value="{!$Resource.loan__MFIStyles}" />
    <apex:stylesheet value="{!$Resource.loan__HelpLink_CSS}" />
    <script type= "text/javascript" src="{!$Resource.ShowPage_JS}"/>
    <script
        src="{!URLFOR($Resource.jQueryFiles, 'js/jquery-1.8.3.min.js')}" />
    <script src="{!URLFOR($Resource.helperclose)}" />
    <script>
        j$ = jQuery.noConflict();
    </script>
    <script>
        function confirmCancel() {
            var isConfirm = confirm("Are you sure you want to cancel?");
            if(isConfirm){
                return this.parent.parent.window.close();                
            }
        }
    
    </script>
    
    <script type="text/javascript"
        src="{!URLFOR($Resource.jQueryFiles, 'js/jquery-1.8.3.min.js')}" />

    <script>
        function testify(){
            alert(j$('').length);
        };
      function scrolify(tblAsJQueryObject, height){
        var oTbl = tblAsJQueryObject;
        
        // for very large tables you can remove the four lines below
        // and wrap the table with <div> in the mark-up and assign
        // height and overflow property  
        var oTblDiv = $("<div/>");
        oTblDiv.css('height', height);
        oTblDiv.css('overflow-y','scroll');
        oTbl.wrap(oTblDiv);

        // save original width
        oTbl.attr("data-item-original-width", oTbl.width());
        oTbl.find('thead tr td').each(function(){
            $(this).attr("data-item-original-width",$(this).width());
        }); 
        oTbl.find('tbody tr:eq(0) td').each(function(){
            $(this).attr("data-item-original-width",$(this).width());
        });                 


        // clone the original table
        var newTbl = oTbl.clone();

        // remove table header from original table
        oTbl.find('thead tr').remove();                 
        // remove table body from new table
        newTbl.find('tbody tr').remove();   

        oTbl.parent().parent().prepend(newTbl);
        newTbl.wrap("<div/>");

        // replace ORIGINAL COLUMN width                
        newTbl.width(newTbl.attr('data-item-original-width'));
        newTbl.find('thead tr td').each(function(){
            $(this).width($(this).attr("data-item-original-width"));
        });     
        oTbl.width(oTbl.attr('data-item-original-width'));      
        oTbl.find('tbody tr:eq(0) td').each(function(){
            $(this).width($(this).attr("data-item-original-width"));
        });                 
    }

    function callScroll() {
        scrolify($('.scrollableFixedHeader'), 300); // 160 is height
    }
        function showConfirmation() {
           
            var txnAmount=  j$('[id *= txnAmount]').val();
            var isConfirm = false;
                if (txnAmount>0){
                    isConfirm = confirm('Are you sure you want to increase the approved loan amount by '+txnAmount+', this will cause the loan account to become partially disbursed.');

                }else if (txnAmount <0){
                        isConfirm = confirm('Are you sure you want to reduce the approved loan amount by '+txnAmount+', this might cause the loan account to become fully disbursed.');                    
                } else{
                    isConfirm = false;
                    alert('Transaction Amount has to be non zero.');
                    
                }   
            if(isConfirm){
                CallSave();
            }else{
                location.reload(true);
            }            
        }    
    </script>
	
    <apex:sectionHeader title="Adjustment to Loan Approved Amount - Add/Subtract: {!loan__Loan_Account__c.Name}" />
    <apex:outputPanel >
        <apex:form id="loanAmountAdjustmentForm">
            
            <apex:actionFunction name="CallSave" action="{!saveLoanAmountAdj}" oncomplete="({!closeModal}===true) ? closeIframe('{!loan__Loan_Account__c.Id}') : {};" reRender="loanAmountAdjustmentForm"/>
            <apex:pageBlock id="loanAdjPBId" mode="edit">
                <apex:pageMessages />
                <apex:pageMessage summary="Loan amount modification is only allowed for funding in tranches loan accounts." severity="Error"  escape="false" strength="3" rendered="{!(isModificationAllowed==false)}"/>
                <apex:pageBlockButtons location="both" rendered="{!(isModificationAllowed==True)}">
                    <c:BusyButton name="Save" busyName="Saving" onclick="return showConfirmation();"
                        actionTo="{!saveLoanAmountAdj}"
                        oncomplete="({!closeModal}===true) ? closeIframe('{!loan__Loan_Account__c.Id}') : {};"
                        reRenderTo="loanAmountAdjustmentForm"
                        disabled="{!(LoanApprovalAmountModification.Id != null)}" />
                    <c:BusyButton name="Reset" busyName="Resetting" actionTo="{!reset}"
                        reRenderTo="loanAmountAdjLoanPanel"
                        disabled="{!(LoanApprovalAmountModification.Id != null)}" />
                    <!-- <apex:commandButton value="Cancel" immediate="true" action="{!URLFOR($Action.Loan_Account__c.View,Loan_Account__c.Id)}" onclick="closeIframe()"/>-->
                    <apex:commandButton value="Close" immediate="true"
                        action="{!URLFOR($Action.Loan_Account__c.View,Loan_Account__c.Id)}"
                        onclick="closeIframe()" />
                </apex:pageBlockButtons>
                <apex:outputpanel id="loanAmountAdjLoanPanel">
                    <apex:actionStatus id="generatePreview"
                        startText="Generating preview..." />
                    <apex:pageBlockSection columns="2"
                        id="loanInfoPanelPageBlockSection" title="Loan Information" rendered="{!(isModificationAllowed==True)}">
                        <apex:outputField value="{!LoanApprovalAmountModification.loan__Loan_Account__c}" />
                        <apex:outputField value="{!LoanApprovalAmountModification.loan__Txn_Date__c}"/>
                        <apex:outputField id="disbursalAmount"  value="{!loanAccount.loan__Disbursal_Amount__c}" />
                        <apex:outputField id="disbursedAmount"  value="{!loanAccount.loan__Disbursed_Amount__c}" />
                        <apex:outputField id="remainingFunding"  value="{!loanAccount.loan__Remaining_Loan_Amount__c}" />
                        <br/>
                        <apex:outputField id="disbursalStatus" value="{!loanAccount.loan__Disbursal_Status__c}" />                   
                        <apex:outputField value="{!loanAccount.loan__Draw_Period_End_Date__c}" />
                    </apex:pageBlockSection>
                    <apex:pageBlockSection columns="2"
                        id="loanTermsPanelPageBlockSection"
                        title="Adjustment Parameters" rendered="{!(isModificationAllowed==True)}">

                        <apex:inputField id="txnAmount"
                            value="{!LoanApprovalAmountModification.loan__Txn_Amt__c}" required="True">
                        </apex:inputField>
                        <apex:inputField id="drawPeriodEndDate"
                            value="{!LoanApprovalAmountModification.loan__Draw_Period_End_Date__c}" required="True">
                        </apex:inputField>                        
                        
                        <apex:inputField id="ref"
                            value="{!LoanApprovalAmountModification.loan__Reference__c}" />
                    </apex:pageBlockSection>                

                </apex:outputpanel>
            </apex:pageBlock>
        </apex:form>
    </apex:outputPanel>
</apex:page>