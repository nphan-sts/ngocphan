                    </apex:pageBlockSection>
                </apex:outputpanel>

            </apex:pageBlock>
            -->
        </apex:define>
        
        <apex:define name="pageNoForm" >
            
            <apex:relatedList list="Application_Equipments__r" id="creditList"/>
        </apex:define>
    </apex:composition>
  </apex:outputPanel>
  
  <apex:outputPanel rendered="{!manager.isSF1Request}">
