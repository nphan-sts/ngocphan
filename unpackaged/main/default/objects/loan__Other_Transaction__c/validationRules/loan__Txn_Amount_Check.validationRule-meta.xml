<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Txn_Amount_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(  loan__Transaction_Type__c , 'Refund'),
( loan__Txn_Amt__c &lt;= 0 )
)</errorConditionFormula>
    <errorMessage>Refund amount should be greater than zero..</errorMessage>
</ValidationRule>
