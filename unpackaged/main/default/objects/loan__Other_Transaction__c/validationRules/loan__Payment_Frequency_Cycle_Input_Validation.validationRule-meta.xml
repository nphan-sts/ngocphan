<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Payment_Frequency_Cycle_Input_Validation</fullName>
    <active>true</active>
    <description>Frequency Cycle cannot be less than equal to zero
It's valid for frequencies Monthly, Weekly and Daily</description>
    <errorConditionFormula>AND( NOT( ISNULL(loan__Frequency_Cycle_of_Loan_Payment__c) ) ,OR(loan__Frequency_Cycle_of_Loan_Payment__c &lt;= 0 , AND( loan__Frequency_Cycle_of_Loan_Payment__c &gt; 1,OR(ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Bi-weekly'),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Semi-Monthly'),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Bi-Monthly'),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Quarterly'),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Semi-Annual'),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Annual'),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, 'Single-Payment')))))</errorConditionFormula>
    <errorDisplayField>loan__Frequency_Cycle_of_Loan_Payment__c</errorDisplayField>
    <errorMessage>Kindly put correct value for Frequency Cycle, the value can not be less than zero, or Frequency is not Monthly, Weekly or Daily.</errorMessage>
</ValidationRule>
