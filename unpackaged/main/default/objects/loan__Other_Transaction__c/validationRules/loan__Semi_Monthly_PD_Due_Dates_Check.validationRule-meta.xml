<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Semi_Monthly_PD_Due_Dates_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(loan__Frequency_of_Loan_Payment__c) == 'Semi-Monthly-PD', ABS(loan__Second_Payment_Date__c - loan__Repayment_Start_Date__c) &gt; 30)</errorConditionFormula>
    <errorMessage>For Semi-Monthly-PD loans, Second payment date can not be 30 days greater than First Payment Date.</errorMessage>
</ValidationRule>
