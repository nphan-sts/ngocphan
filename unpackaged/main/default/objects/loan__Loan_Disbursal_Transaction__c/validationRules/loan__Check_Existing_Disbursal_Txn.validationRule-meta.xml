<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Check_Existing_Disbursal_Txn</fullName>
    <active>true</active>
    <errorConditionFormula>ISNEW()  &amp;&amp; AND(loan__Loan_Account__r.loan__Cleared_Disbursal_Txn_Count__c &gt; 0, ISPICKVAL(loan__Loan_Account__r.loan__Product_Type__c, 'Loan'), NOT( loan__Loan_Account__r.loan__Funding_in_Tranches__c), NOT(ISPICKVAL(loan__Loan_Disbursal_Transaction_Type__c, 'Principal Adjustment - Add')))</errorConditionFormula>
    <errorMessage>This loan account has already been disbursed.</errorMessage>
</ValidationRule>
