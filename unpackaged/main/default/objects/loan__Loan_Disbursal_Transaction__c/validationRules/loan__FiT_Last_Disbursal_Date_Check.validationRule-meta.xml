<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__FiT_Last_Disbursal_Date_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(),
ISPICKVAL(loan__Loan_Account__r.loan__Product_Type__c, 'Loan'), loan__Loan_Account__r.loan__Funding_in_Tranches__c, ( loan__Loan_Account__r.loan__Cleared_Disbursal_Txn_Count__c &gt; 0), NOT(ISBLANK(loan__Loan_Account__r.loan__Last_Disbursal_Date__c )), (loan__Disbursal_Date__c  &lt;  loan__Loan_Account__r.loan__Last_Disbursal_Date__c ))</errorConditionFormula>
    <errorMessage>Disbursal Transaction Date cannot be before the Last Disbursal Date.</errorMessage>
</ValidationRule>
