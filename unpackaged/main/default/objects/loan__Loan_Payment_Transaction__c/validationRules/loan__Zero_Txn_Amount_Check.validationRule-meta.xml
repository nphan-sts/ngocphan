<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Zero_Txn_Amount_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(loan__Loan_Account__r.loan__Protect_Enabled__c), ROUND(loan__Transaction_Amount__c,2) &lt;= 0,loan__Payment_Mode__r.Name != 'WRITE OFF')</errorConditionFormula>
    <errorMessage>Transaction amount should be greater than zero.</errorMessage>
</ValidationRule>
