<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Cheque_Number_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>loan__Payment_Mode__r.Name  = 'Cheque'  &amp;&amp;  ISBLANK( loan__Cheque_Number__c )</errorConditionFormula>
