<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Investment_amount_should_be_positive</fullName>
    <active>true</active>
    <errorConditionFormula>OR(ISNULL(loan__Investment_Amount__c),  ISBLANK(loan__Investment_Amount__c), loan__Investment_Amount__c &lt;= 0)</errorConditionFormula>
    <errorMessage>The investment amount must be greater than zero.</errorMessage>
</ValidationRule>
