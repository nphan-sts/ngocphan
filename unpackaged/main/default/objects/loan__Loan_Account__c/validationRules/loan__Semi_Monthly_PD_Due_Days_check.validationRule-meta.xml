<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Semi_Monthly_PD_Due_Days_check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(loan__Frequency_of_Loan_Payment__c) == 'Semi-Monthly-PD',ABS(DAY(loan__Second_Installment_Date__c)- DAY(loan__Expected_Repayment_Start_Date__c)) &lt; 5)</errorConditionFormula>
    <errorMessage>Absolute difference between first payment due day &amp; second payment due day can not be lesser than 5</errorMessage>
</ValidationRule>
