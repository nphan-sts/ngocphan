<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Semi_Monthly_PD_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(loan__Frequency_of_Loan_Payment__c) == 'Semi-Monthly-PD', OR(ISNULL(loan__Second_Installment_Date__c), ISBLANK(loan__Second_Installment_Date__c)))</errorConditionFormula>
    <errorMessage>Please provide Second Installment Date for Semi-Monthly-PD loans.</errorMessage>
</ValidationRule>
