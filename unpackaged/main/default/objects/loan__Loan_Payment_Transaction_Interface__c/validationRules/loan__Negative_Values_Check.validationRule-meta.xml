<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Negative_Values_Check</fullName>
    <active>true</active>
    <errorConditionFormula>OR(loan__Fees__c &lt;0 ,
 loan__Interest__c &lt;0,
 loan__Principal__c &lt;0,
 loan__Transaction_Amount__c &lt;0
)</errorConditionFormula>
    <errorMessage>Amount must be positive.</errorMessage>
</ValidationRule>
