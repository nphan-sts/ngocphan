<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Percentage_Value_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(loan__Split_Calculation_Basis__c, 'Percentage'), loan__Value__c &gt; 100)</errorConditionFormula>
    <errorMessage>For Split Calculation Basis 'Percentage', Value should be less than or equal to 100.</errorMessage>
</ValidationRule>
